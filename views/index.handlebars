<script>
	$(function() {
		console.log("on document load");
    	$(".devoured-btn").on("click", function(event) {
			console.log("on button click()");
			event.preventDefault();
			var id = $(this).attr("id");
			console.log("ID:", id);
			$.ajax("/api/devour/"+id, {
				type: "PUT",
				data: {devoured: true}
			})
			.then(
				function() {
					$(this).parent().remove();
					location.reload(true);
				}
			);
    	});
  	});	
</script>

<div class="container">

      <!-- Jumbotron -->
      <div class="jumbotron" style="background-color: orange; color: blue">
        <h1 class="text-center">Eat-Da-Burger!</h1>
        <h3 class="text-center">Enter the name of a burger you would like to add to the list, and click "submit". Let us know if you are devouring it by clicking the corresponding "Devour!" button. </h3>
        <h3 class = "text-center"><mark><i>YUM!!!!!</i></mark></h3>
      </div>

      <div class="row">

        <div class="col-lg-6">

          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><strong>Available Burgers</strong></h3>
            </div>
            <div class="panel-body">
				<ul>
				  {{#each burgers}}
				  	{{#unless this.devoured}}
						<li>
					  	   <p>ID: {{this.id}} Burger: {{this.burger_name}}
					  	   	<button class="devoured-btn" id="{{this.id}}">Devour!</button></p>
					  	</li>
					  {{/unless}}
				  {{/each}}
				</ul>
			</div>

		<div class="col-lg-6">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><strong>Devoured Burgers! Nom!</strong></h3>
            </div>
            <div class="panel-body2">
				<ul>
				  {{#each burgers}}
				  	{{#if this.devoured}}
					  	<li>
					  	   <p>ID: {{this.id}} Burger: {{this.burger_name}}</p>
					  	</li>
					  {{/if}}
				  {{/each}}
				</ul>
			</div>
<form action="/api/new" method="POST">
	<textarea type="text" name="burger_name"></textarea>
	<button type="submit">Submit</button>
</form>